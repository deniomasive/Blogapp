{{#if erros}}
<div class="alert alert-danger">
    <ul>
        {{#each erros}}
        <li>{{this.text}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">

            <div class="mb-3">
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
            </div>

            <div class="mb-3">
                <label for="slug">Slug:</label>
                <input type="text" id="slug" name="slug" class="form-control" value="{{postagem.slug}}" required>
            </div>

            <div class="mb-3">
                <label for="descricao">Descrição:</label>
                <input type="text" id="descricao" name="descricao" class="form-control" value="{{postagem.descricao}}"
                    required>
            </div>

            <div class="mb-3">
                <label for="conteudo">Conteúdo:</label>
                <textarea id="conteudo" name="conteudo" class="form-control" rows="5"
                    required>{{postagem.conteudo}}</textarea>
            </div>

            <div class="mb-3">
                <label for="categoria">Categoria:</label>
                <select name="categoria" class="form-select">
                    {{#each categorias}}
                    <option value="{{_id}}" {{#ifEquals _id ../postagem.categoria}}selected{{/ifEquals}}>{{nome}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-success">Salvar alterações</button>
        </form>
    </div>
</div>