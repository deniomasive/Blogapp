<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

<div class="row mt-4">
    {{#each postagens}}
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h4>{{titulo}}</h4>
                <p>{{descricao}}</p>
                <small>Categoria: {{categoria.nome}}</small><br>
                <small>Criado em: {{data}}</small>

                <hr>
                <!-- Botão editar -->
                <a href="/admin/postagens/edit/{{_id}}" class="btn btn-primary btn-sm">Editar</a>

                <!-- Botão deletar -->
                <form action="/admin/postagens/deletar" method="POST" style="display:inline;">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <p>Nenhuma postagem registrada</p>
    {{/each}}
</div>