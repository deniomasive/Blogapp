{{!-- Exibe erros de validação, se existirem --}}
{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{!-- Se não houver erros, não mostra nada --}}
{{/each}}

<h3>Editar Categoria:</h3>

<div class="card mt-3">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">
            <input type="hidden" name="id" value="{{categoria._id}}">

            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <input type="text" id="nome" name="nome" class="form-control" value="{{categoria.nome}}">
            </div>

            <div class="mb-3">
                <label for="slug" class="form-label">Slug:</label>
                <input type="text" id="slug" name="slug" class="form-control" value="{{categoria.slug}}">
            </div>

            <button type="submit" class="btn btn-success">Salvar Alterações</button>
        </form>
    </div>
</div>